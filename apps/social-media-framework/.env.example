# Copy this file to .env and fill real credentials before enabling live posting

# Twitter/X credentials (if using v2/v1.1 SDKs)
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_ACCESS_TOKEN=your-access-token
TWITTER_ACCESS_SECRET=your-access-secret

# Telegram bot token and chat id
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# Discord webhook URL
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...

# Default project to operate on
DEFAULT_PROJECT=baghpat

# Safe mode prevents real posting
SAFE_MODE=true

# Posting policy
MAX_POSTS_PER_DAY=3

# Media limits (bytes)
MEDIA_MAX_BYTES=15728640 # 15MB
