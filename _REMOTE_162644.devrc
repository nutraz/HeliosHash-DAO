# ==============================================
# Advanced DFX Functions
# ==============================================

# Deploy specific canister with logs
dfx-deploy-with-logs() {
    if [ $# -eq 0 ]; then
        echo "Usage: dfx-deploy-with-logs <canister_name>"
        return 1
    fi
    
    echo "ğŸš€ Deploying $1 canister..."
    dfx deploy $1 --verbose
    echo "ğŸ“Š Getting canister status..."
    dfx canister status $1
}

# Reset and redeploy all canisters
dfx-reset-all() {
    echo "ğŸ”„ Stopping DFX..."
    dfx stop
    
    echo "ğŸ§¹ Cleaning up..."
    rm -rf .dfx/local
    
    echo "ğŸš€ Starting DFX clean..."
    dfx start --clean --background
    
    echo "â³ Waiting for local replica..."
    sleep 5
    
    echo "ğŸ“¦ Deploying all canisters..."
    dfx deploy
    
    echo "âœ… Reset and deployment complete!"
    dfx canister status --all
}

# Quick canister call with error handling
dfx-call() {
    if [ $# -lt 2 ]; then
        echo "Usage: dfx-call <canister> <method> [args...]"
        return 1
    fi
    
    local canister=$1
    local method=$2
    shift 2
    
    echo "ğŸ“ Calling $canister.$method..."
    dfx canister call $canister $method "$@" || echo "âŒ Call failed"
}

