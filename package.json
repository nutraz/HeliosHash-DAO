{
  "name": "helioshash-web",
  "version": "1.0.0",
  "scripts": {
    "dev": "next dev -p 3001",
  "type-check": "cd apps/web && npx tsc --noEmit -p tsconfig.json",
    "build": "cd apps/web && next build",
    "start": "next start",
    "lint": "next lint",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:canister": "cd canisters/test-runner && ./run-tests.sh",
    "build:canisters": "dfx build",
    "deploy": "dfx deploy",
    "deploy:local": "dfx deploy --network local",
    "generate": "dfx generate",
    "setup": "./scripts/dev-setup.sh",
    "clean": "rm -rf .next node_modules/.cache .dfx .vessel",
    "dfx:start": "dfx start --background --clean",
    "dfx:stop": "dfx stop",
    "dfx:reset": "dfx stop && dfx start --clean && dfx deploy"
  },
  "dependencies": {
    "next": "14.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "@dfinity/principal": "^0.21.2",
    "@dfinity/candid": "^0.21.2",
    "lucide-react": "^0.552.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "tailwind-merge": "^2.0.0"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/node": "^20.0.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^4.1.17",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "14.0.0",
    "vitest": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/user-event": "^14.4.3",
    "jsdom": "^27.1.0",
    "@playwright/test": "^1.40.0",
    "@vitejs/plugin-react": "^4.0.0"
  },
  "pnpm": {
    "overrides": {
      "react": "^18.3.1",
      "react-dom": "^18.3.1"
    }
  }
}
