# Project health check
hhdao-health() {
    echo "ğŸ¥ HeliosHash DAO Health Check"
    echo "============================="
    
    # Check critical files
    [ -f "dfx.json" ] && echo "âœ… dfx.json" || echo "âŒ dfx.json missing"
    [ -f "package.json" ] && echo "âœ… package.json" || echo "âŒ package.json missing"
    [ -d "canisters" ] && echo "âœ… canisters directory" || echo "âŒ canisters directory missing"
    [ -d "src" ] && echo "âœ… src directory" || echo "âŒ src directory missing"
    
    # Check environment
    command -v dfx >/dev/null && echo "âœ… DFX installed" || echo "âŒ DFX not installed"
    command -v node >/dev/null && echo "âœ… Node.js installed" || echo "âŒ Node.js not installed"
    command -v pnpm >/dev/null && echo "âœ… pnpm installed" || echo "âŒ pnpm not installed"
}

# ==============================================
# Performance & Monitoring
# ==============================================

# Monitor canister cycles
hhdao-cycles() {
    echo "ğŸ’° Canister Cycles Status"
    echo "========================"
    
    for canister in hhdao hhdao_dao hhdao_identity hhdao_telemetry hhdao_documents; do
        if dfx canister id $canister >/dev/null 2>&1; then
            echo "ğŸ“Š $canister:"
            dfx canister status $canister 2>/dev/null | grep "Balance:"
        fi
    done
}

# Clean build artifacts
hhdao-clean() {
    echo "ğŸ§¹ Cleaning HeliosHash DAO build artifacts..."
    
    # Clean DFX artifacts
    rm -rf .dfx/local
    
    # Clean Node.js artifacts
    rm -rf node_modules/.cache
    rm -rf .next
    rm -rf dist
    
    # Clean test artifacts
    rm -rf coverage
    rm -rf test-results
    
    echo "âœ… Cleanup complete!"
}

