# Initialize local development environment
hhdao-init() {
    echo "ğŸ—ï¸  Initializing HeliosHash DAO development environment..."
    
    # Start DFX
    dfx start --clean --background
    
    # Install dependencies
    echo "ğŸ“¦ Installing dependencies..."
    pnpm install
    
    # Deploy canisters
    echo "ğŸš€ Deploying canisters..."
    dfx deploy
    
    # Generate type declarations
    echo "ğŸ”§ Generating TypeScript declarations..."
    dfx generate
    
    echo "âœ… Development environment ready!"
    echo "ğŸŒ Frontend: http://localhost:3000"
    echo "ğŸ”— Candid UI: http://localhost:4943/?canisterId=$(dfx canister id __Candid_UI)"
}

# Check all system status
hhdao-status() {
    echo "ğŸ“Š HeliosHash DAO Development Status"
    echo "=================================="
    
    # Check DFX status
    echo "ğŸ”— DFX Replica Status:"
    dfx ping 2>/dev/null && echo "âœ… Local replica running" || echo "âŒ Local replica not running"
    
    # Check canisters
    echo ""
    echo "ğŸ“¦ Canister Status:"
    dfx canister status --all 2>/dev/null || echo "âŒ No canisters deployed"
    
    # Check Node.js dependencies
    echo ""
    echo "ğŸ“š Dependencies:"
    [ -d "node_modules" ] && echo "âœ… Node modules installed" || echo "âŒ Run 'pnpm install'"
    
    # Check development server
    echo ""
    echo "ğŸ–¥ï¸  Development Server:"
    curl -s http://localhost:3000 > /dev/null && echo "âœ… Frontend server running" || echo "âŒ Frontend server not running"
}

# Run Motoko tests
hhdao-test-motoko() {
    echo "ğŸ§ª Running Motoko tests..."
    cd canisters/test-runner
    ./run-tests.sh
    cd ../..
}

# Generate TypeScript declarations from Candid
