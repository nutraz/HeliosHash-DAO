{
  "name": "helioshash-dao",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "concurrently -n \"WEB,BACKEND\" -c \"green,blue\" \"pnpm dev:web\" \"pnpm dev:backend\"",
    "dev:web": "cd apps/web && pnpm dev",
    "dev:backend": "dfx start --background --clean",
    "dev:full": "pnpm setup:env && pnpm dev",
    "build": "pnpm build:web && pnpm build:backend",
    "build:web": "cd apps/web && pnpm build",
    "build:backend": "dfx deploy",
    "build:mobile": "cd apps/mobile && flutter build apk --release",
    "test": "pnpm test:web && pnpm test:backend",
    "test:web": "cd apps/web && pnpm test",
    "test:backend": "cd canisters && pnpm test",
    "test:e2e": "cd apps/web && pnpm test:e2e",
    "type-check": "cd apps/web && npx tsc --noEmit -p tsconfig.json",
    "lint": "cd apps/web && pnpm lint",
    "lint:fix": "cd apps/web && pnpm lint --fix",
    "deploy:web-canister": "sh ./deploy-web-canister.sh",
    "deploy:frontend": "sh ./deploy-web-canister.sh",
    "deploy:all": "sh ./deploy-web-canister.sh",
    "deploy:production": "dfx deploy --network ic",
    "setup:env": "sh ./scripts/setup-dev-env.sh",
    "setup:dfx": "dfx start --background --clean && dfx deploy",
    "setup:full": "./hhdao-full-setup.sh",
    "start:local": "dfx start --background && sh ./scripts/setup-dev-env.sh",
    "start:clean": "dfx stop && dfx start --background --clean",
    "generate": "dfx generate",
    "canisters": "dfx canister list",
    "status": "dfx status",
    "clean": "dfx stop && rm -rf .dfx && pnpm clean:web",
    "clean:web": "cd apps/web && rm -rf .next node_modules dist",
    "clean:all": "pnpm clean && find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "logs": "dfx logs frontend",
    "logs:all": "dfx logs"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "canisters/*"
  ],
  "devDependencies": {
    "@types/node": "^20.0.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.57.1",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "@dfinity/agent": "3.4.3",
    "@dfinity/auth-client": "3.4.3"
  }
}
