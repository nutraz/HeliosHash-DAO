FROM node:20-alpine

WORKDIR /workspace

# Install pnpm
RUN npm install -g pnpm

# Install additional tools
RUN apk add --no-cache git zsh

# Copy package files
COPY package*.json pnpm-lock.yaml ./

# Install dependencies
RUN pnpm install

# Copy the rest of the application
COPY . .

EXPOSE 3000 9229

CMD ["pnpm", "dev"]
